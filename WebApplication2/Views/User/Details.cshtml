@model WebApplication2.Models.User?

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-4"></div>
    <div class="col-4">
        <h2 class="text-center mb-2">Information about User</h2>
        <hr class="mb-3" />
        <div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-4">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" disabled="disabled"/>
                <span asp-validation-for="Name"></span>
            </div>
            <div class="form-group mb-4">
                <label asp-for="Age"></label>
                <input asp-for="Age" class="form-control" disabled="disabled"/>
            </div>
            <div class="form-group mb-4">
                <label asp-for="Country"></label>
                <input asp-for="Country" class="form-control" disabled="disabled"/>
            </div>
            <form asp-action="Delete" asp-controller="User" method="post">
                <input asp-for="Id" hidden="hidden"/>
                <div class="form-group mb-4">
                    <input type="submit" value="Delete" class="btn btn-danger"/>
                    <a asp-controller="User" asp-action="Index" class="btn btn-outline-primary ml-4">Back to list</a>
                </div>
            </form>
        </div>
    </div>
    <div class="col-4"></div>
</div>
